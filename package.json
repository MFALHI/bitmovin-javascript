{
  "name": "bitmovin-javascript",
  "version": "2.0.0-beta2",
  "main": "./dist/bitmovin.node.js",
  "module": "./dist/es-modules/index.js",
  "browser": "./dist/bitmovin.browser.js",
  "types": "./dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/bitmovin/bitmovin-javascript.git"
  },
  "files": [
    "dist"
  ],
  "license": "MIT",
  "scripts": {
    "clean": "rimraf dist",
    "lint": "eslint --color ./bitmovin ./tests ./examples",
    "lint-src": "eslint --color ./bitmovin",
    "test": "node scripts/testRunner.js ./tests",
    "coverage": "node scripts/testRunner.js ./tests --coverage",
    "it-coverage": "rm -rf ./coverage && npm run analyze-coverage && npm run check-coverage",
    "format": "prettier --config ./.prettierrc --write \"./{bitmovin,examples,tests}/**/*.js\"",
    "format-check": "prettier --config ./.prettierrc --list-different \"./{bitmovin,examples,tests}/**/*.js\"",
    "build": "yarn clean && yarn build:standalone:dev && yarn build:standalone:prod && yarn build:modules && yarn build:flow-types",
    "build:standalone:dev": "NODE_ENV=development webpack --config=./webpack4.config.js",
    "build:standalone:prod": "NODE_ENV=production webpack --config=./webpack4.config.js",
    "build:modules": "tsc --project ./tsconfig.es6.json",
    "build:flow-types": ""
  },
  "devDependencies": {
    "@types/isomorphic-fetch": "^0.0.34",
    "@types/url-join": "^0.8.2",
    "awesome-typescript-loader": "^5.0.0",
    "babel-cli": "^6.18.0",
    "babel-core": "^6.21.0",
    "babel-eslint": "^8.2.3",
    "babel-jest": "^19.0.0",
    "babel-loader": "^7.1.4",
    "babel-minify-webpack-plugin": "^0.3.0",
    "babel-plugin-inline-replace-variables": "^1.3.1",
    "babel-plugin-rewire": "^1.0.0",
    "babel-plugin-transform-object-rest-spread": "^6.20.2",
    "babel-polyfill": "^6.20.0",
    "babel-preset-env": "^1.1.8",
    "babel-preset-flow": "^6.23.0",
    "babel-register": "^6.18.0",
    "chokidar": "^1.6.1",
    "codecov": "^2.2.0",
    "dotenv": "^4.0.0",
    "eslint": "^4.19.1",
    "eslint-plugin-flowtype": "^2.49.3",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-jest": "^21.17.0",
    "isparta": "^4.0.0",
    "istanbul": "v1.1.0-alpha.1",
    "jest": "^19.0.2",
    "json-loader": "^0.5.4",
    "lodash": "^4.17.10",
    "mocha": "^3.2.0",
    "nodelint": "^0.6.2",
    "prettier": "^1.12.1",
    "regenerator-runtime": "^0.10.3",
    "rimraf": "^2.6.2",
    "tslint": "^5.10.0",
    "typescript": "^2.9.1",
    "uglifyjs-webpack-plugin": "^1.2.5",
    "url-join": "^1.1.0",
    "webpack": "^4.10.2",
    "webpack-cli": "^2.1.5",
    "write-json-webpack-plugin": "^1.0.0",
    "xmlhttprequest": "^1.8.0"
  },
  "dependencies": {
    "es6-promise": "^4.2.4",
    "isomorphic-fetch": "^2.2.1",
    "moment": "^2.17.1"
  }
}
