{
  "name": "bitmovin-javascript",
  "version": "1.10.0",
  "main": "./dist/bitmovin.node.js",
  "module": "./dist/es-modules/bitmovin.js",
  "browser": "./dist/bitmovin.browser.js",
  "files": [
    "./dist"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "lint": "eslint --color ./bitmovin",
    "lint-fix": "eslint --color --fix ./bitmovin",
    "test": "node scripts/testRunner.js ./tests",
    "test_it": "node scripts/test.js ./tests_it",
    "coverage": "node scripts/testRunner.js ./tests --coverage",
    "it-coverage": "rm -rf ./coverage && npm run analyze-coverage && npm run check-coverage",
    "it": "./node_modules/mocha/bin/mocha --compilers js:babel-core/register --require babel-polyfill --recursive tests_it --timeout 30000",
    "format": "prettier --config ./.prettierrc --write \"./{bitmovin,examples}/**/*.js\"",
    "format-check": "prettier --config ./.prettierrc --list-different \"./{bitmovin,examples}/**/*.js\"",
    "build": "yarn clean && yarn build:standalone:dev && yarn build:standalone:prod && yarn build:modules",
    "build:standalone:dev": "NODE_ENV=development webpack --config=./webpack4.config.js",
    "build:standalone:prod": "NODE_ENV=production webpack --config=./webpack4.config.js",
    "build:modules": "BABEL_ENV=modules babel ./bitmovin -d ./dist/es-modules"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-core": "^6.21.0",
    "babel-eslint": "^8.2.3",
    "babel-jest": "^19.0.0",
    "babel-loader": "^7.1.4",
    "babel-minify-webpack-plugin": "^0.3.0",
    "babel-plugin-rewire": "^1.0.0",
    "babel-plugin-transform-object-rest-spread": "^6.20.2",
    "babel-polyfill": "^6.20.0",
    "babel-preset-env": "^1.1.8",
    "babel-register": "^6.18.0",
    "chokidar": "^1.6.1",
    "codecov": "^2.2.0",
    "dotenv": "^4.0.0",
    "eslint": "^4.19.1",
    "eslint-plugin-import": "^2.12.0",
    "isparta": "^4.0.0",
    "istanbul": "v1.1.0-alpha.1",
    "jest": "^19.0.2",
    "json-loader": "^0.5.4",
    "lodash": "^4.17.10",
    "mocha": "^3.2.0",
    "nodelint": "^0.6.2",
    "prettier": "^1.12.1",
    "regenerator-runtime": "^0.10.3",
    "rimraf": "^2.6.2",
    "url-join": "^1.1.0",
    "webpack": "^4.10.2",
    "webpack-cli": "^2.1.5",
    "write-json-webpack-plugin": "^1.0.0",
    "xmlhttprequest": "^1.8.0"
  },
  "dependencies": {
    "bluebird": "^3.4.7",
    "moment": "^2.17.1",
    "node-fetch": "^1.6.3"
  }
}
