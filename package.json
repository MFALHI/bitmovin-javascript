{
  "name": "bitmovin-javascript",
  "version": "2.0.0-beta2",
  "main": "./dist/bitmovin.node.js",
  "module": "./dist/es-modules/index.js",
  "browser": "./dist/bitmovin.browser.js",
  "types": "./dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/bitmovin/bitmovin-javascript.git"
  },
  "files": [
    "dist"
  ],
  "license": "MIT",
  "scripts": {
    "clean": "rimraf dist",
    "lint": "tslint --config ./tslint.json \"./{bitmovin,tests}/**/*.{ts,tsx}\"",
    "lint-examples": "eslint ./examples",
    "test": "jest",
    "coverage": "jest --coverage",
    "format": "prettier --config ./.prettierrc --write \"./{bitmovin,examples,tests}/**/*.js\"",
    "format-check": "prettier --config ./.prettierrc --list-different \"./{bitmovin,examples,tests}/**/*.js\"",
    "build": "yarn clean && yarn build:standalone:dev && yarn build:standalone:prod && yarn build:modules && yarn build:flow-types",
    "build:standalone:dev": "NODE_ENV=development webpack --config=./webpack4.config.js",
    "build:standalone:prod": "NODE_ENV=production webpack --config=./webpack4.config.js",
    "build:modules": "tsc --project ./tsconfig.es6.json",
    "build:flow-types": ""
  },
  "devDependencies": {
    "@types/isomorphic-fetch": "^0.0.34",
    "@types/jest": "^23.0.0",
    "@types/url-join": "^0.8.2",
    "awesome-typescript-loader": "^5.0.0",
    "codecov": "^2.2.0",
    "eslint": "^4.19.1",
    "esprima": "^4.0.0",
    "jest": "^23.1.0",
    "lodash": "^4.17.10",
    "prettier": "^1.12.1",
    "rimraf": "^2.6.2",
    "ts-jest": "^22.4.6",
    "tslint": "^5.10.0",
    "typescript": "^2.9.1",
    "uglifyjs-webpack-plugin": "^1.2.5",
    "webpack": "^4.10.2",
    "webpack-cli": "^2.1.5"
  },
  "dependencies": {
    "es6-promise": "^4.2.4",
    "isomorphic-fetch": "^2.2.1",
    "moment": "^2.17.1",
    "url-join": "^1.1.0"
  }
}
